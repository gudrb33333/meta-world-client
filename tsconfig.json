{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "noEmit": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "build/types",
    "baseUrl": ".",
    "paths": {
        "cannon" : ["src/lib/cannon/cannon"]
    }
},
  "include": [
    "src",
    "src/systems/**/*"
  ]
}
